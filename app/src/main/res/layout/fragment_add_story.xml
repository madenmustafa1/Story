<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddStoryFragment"
    android:orientation="vertical"
    android:gravity="center"


    android:background="@color/white"
    >

    <EditText
        android:id="@+id/addFragmentTitleText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Title"
        android:inputType="textPersonName"
        android:background="@drawable/text_corners"

        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"

        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />

    <EditText
        android:id="@+id/addFragmentStoryText"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/text_corners"
        android:gravity="clip_vertical"
        android:hint="New Story"
        android:inputType="textMultiLine|textPersonName"

        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"

        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addFragmentShareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#ACB5AF"
        android:text="Share"
        android:textColor="#FCF7F3" />

</LinearLayout>