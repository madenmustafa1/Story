<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SIGN.SignInActivity"
    >


    <View
        android:id="@+id/orange_colo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/sign_in_background_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/storyText"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginVertical="350dp"
        android:layout_marginTop="344dp"
        android:width="270dp"
        android:height="68dp"
        android:ems="10"
        android:background="@drawable/text_corners"
        android:hint="E-mail"
        android:inputType="textPersonName"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/nameText"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="280dp"
        android:width="270dp"
        android:height="68dp"
        android:background="@drawable/text_corners"
        android:ems="10"
        android:hint="Name"

        android:inputType="textPersonName"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/surnameText"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="280dp"
        android:width="270dp"
        android:height="68dp"
        android:background="@drawable/text_corners"
        android:ems="10"
        android:hint="Surname"

        android:inputType="textPersonName"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:width="270dp"
        android:height="58dp"
        android:background="@drawable/text_corners"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storyText"
        app:layout_constraintVertical_bias="0.097" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUp"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/white"

        android:contextClickable="false"
        android:linksClickable="false"
        android:text="SIGN UP"

        android:textColor="#FFAF37"

        app:layout_constraintCircleRadius="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordText"
        app:rippleColor="#FFFFFF" />

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="96dp"
        android:text="Login."
        android:textColor="#165FF1"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Do you have an account?"
        app:layout_constraintEnd_toStartOf="@+id/signUpText"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="268dp"
        android:layout_height="79dp"
        android:layout_marginTop="156dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Story"
        android:textColor="#272727"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/maleBox"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:text="@string/male"
        app:layout_constraintBottom_toTopOf="@+id/signUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.361"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordText"
        app:layout_constraintVertical_bias="0.533" />

    <CheckBox
        android:id="@+id/femaleBox"
        android:layout_width="83dp"
        android:layout_height="48dp"
        android:text="Female"
        app:layout_constraintBottom_toTopOf="@+id/signUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.628"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordText"
        app:layout_constraintVertical_bias="0.533" />



</androidx.constraintlayout.widget.ConstraintLayout>